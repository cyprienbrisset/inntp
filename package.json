{
  "name": "documalis-relay",
  "version": "1.0.0",
  "description": "SMTP Relay Office 365 avec monitoring (squelette fonctionnel)",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:frontend": "cd frontend && npm run build",
    "build:all": "npm run build && npm run build:frontend",
    "start": "node dist/index.js",
    "dev:backend": "npm run build && npm start",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "install:frontend": "cd frontend && npm install"
  },
  "dependencies": {
    "@azure/msal-node": "^2.14.0",
    "sql.js": "^1.9.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mailparser": "^3.7.1",
    "nodemailer": "^6.9.14",
    "smtp-server": "^3.13.4"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "typescript": "^5.5.3",
    "concurrently": "^8.2.2"
  },
  "private": true
}
